<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_auth"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.marina.ruiz.globetrotting.ui.auth.fragments.LoginFragment"
        android:label="login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.marina.ruiz.globetrotting.ui.auth.fragments.RegisterFragment"
        android:label="register"/>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.marina.ruiz.globetrotting.ui.main.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <argument
            android:name="userData"
            app:argType="com.marina.ruiz.globetrotting.data.network.firebase.model.UserDataResponse"
            app:nullable="true" />
    </activity>
</navigation>