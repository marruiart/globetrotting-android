<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_bookings"
    app:startDestination="@id/bookingsFragment">
    <fragment
        android:id="@+id/bookingsFragment"
        android:name="com.marina.ruiz.globetrotting.ui.main.bookings.BookingsFragment"
        android:label="fragment_bookings"
        tools:layout="@layout/fragment_bookings" >
        <action
            android:id="@+id/action_bookingsFragment_to_bookingCreationFormFragment"
            app:destination="@id/bookingCreationFormFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookingCreationFormFragment"
        android:name="com.marina.ruiz.globetrotting.ui.main.bookings.BookingCreationFormFragment"
        android:label="fragment_booking_creation_form"
        tools:layout="@layout/fragment_booking_creation_form" >
        <argument android:name="destination"
            app:argType="com.marina.ruiz.globetrotting.data.repository.model.Destination" />
        <argument
            android:name="booking"
            app:argType="com.marina.ruiz.globetrotting.data.repository.model.Booking"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>